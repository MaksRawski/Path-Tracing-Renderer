LIB_TARGETS = $(CIMGUI_TARGET) $(GLAD_TARGET) $(GLFW_TARGET) $(CGLTF_TARGET)
LIB_INCLUDE_PATHS = $(CIMGUI_INCLUDE_DIR) $(GLAD_INCLUDE_DIR) $(GLFW_INCLUDE_DIR) $(CGLTF_INCLUDE_DIR)
